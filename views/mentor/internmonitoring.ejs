<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Untitled Document</title>
</head>

<body>
  <form action="/intermon" method="post"><table width="200" border="1">
  <table border="1">
    <tr>
      <td><input type="text" name="textfield"></td>
      <td><input type="submit" value="Search" name="Search"></td>
      <td><input type="submit" value="Confirm" name="confirm"></td>
    </tr>
  </table>
  <table width="200" border="1">

  <tr>
    <td>S.No</td>
    <td>Interns</td>
    <td>Work Assigned</td>
    <td>Status</td>

  </tr>

  <tr>
    <% var counter =1;
  mnn.forEach(i=> { %>
  
   
    <td>&nbsp;<%= counter %></td>
    <td>&nbsp;<%= i.Name %></td>
    <td >&nbsp;<%= i.work_title %></td>
    <td>
      <% if (i.status == "pending"){ %>
      <label>
      <input type="checkbox" onclick="return confirm('Are you sure?')"  name="checkbox2" value="<%= i.id %>" id="checkbox2" /><%= i.status %></label>
      <% } else {%>
        <%= i.status %>
      <%} %>
    </td>
    
  </tr>
  <% counter++;
}); %>
    

  </tr>
</table>
</form>
</body>
</html>
